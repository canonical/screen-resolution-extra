<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">

<policyconfig>
  <!-- 
    Policy definitions for Screen Resolution Extra system actions.
    (C) 2008 Alberto Milone <albertomilone@alice.it>
  --> 
  <vendor>Screen Resolution Extra</vendor>
  <vendor_url>https://launchpad.net/screen-resolution-extra</vendor_url>

  <action id="com.ubuntu.screenresolution.mechanism.configure">
    <_description>Change Screen Resolution Configuration</_description>
    <_message>Changing the Screen Resolution configuration requires privileges.</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>

  <action id="com.ubuntu.screenresolution.mechanism.dontzap">
    <_description>Change the effect of Ctrl+Alt+Backspace</_description>
    <_message>Changing the effect of Ctrl+Alt+Backspace requires privileges.</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>

  <action id="com.ubuntu.screenresolution.mechanism.prime">
    <_description>Enable or disable the NVIDIA GPU with PRIME</_description>
    <_message>Enabling or disabling the NVIDIA GPU requires privileges.</_message>
    <defaults>
      <allow_inactive>no</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>

</policyconfig>
